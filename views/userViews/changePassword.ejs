  <div id="box" class="mt-5 bg-light">
    <!-- <form id="myform-search" > -->
    <h1>Change Password <span>choose a good one!</span></h1>
    <form method="post" action="/user/profile/password">
      <p>
        <input type="password" value="" placeholder="Enter Current Password" id="p" class="password"
          name="currentPassword">
        <button class="unmask" type="button"></button>
      </p>
      <p>
        <input type="password" value="" placeholder="Enter New Password" id="p-c" class="password" name="newPassword">
        <button class="unmask" type="button"></button>
      <div id="strong"><span></span></div>
      <div id="valid"></div>
      <small>Must be 6+ characters long and contain at least 1 upper case letter, 1 number, 1 special character</small>
      </p>
      <button class="btn btn-primary" type="submit">Submit</button>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
